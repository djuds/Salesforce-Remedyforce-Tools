String recId = 'a1Ni0000000IKYQ'; //record to submit for approval

Approval.ProcessSubmitRequest autoApproval = new Approval.ProcessSubmitRequest(); 
autoApproval.setComments('Auto Submit Record for approval.'); 
autoApproval.setObjectId(recId); 

autoApproval.setSubmitterId(userinfo.getUserId()); //user that submitted the approval
autoApproval.setProcessDefinitionNameOrId('Approve_Mobile_Purchase'); //approval process
autoApproval.setSkipEntryCriteria(true);

Approval.ProcessResult result = Approval.process(autoApproval); 
